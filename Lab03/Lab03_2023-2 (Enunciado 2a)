#include <iostream>


using namespace std;

#define N 8
#define M 5

int buscarMaytor(int arr[M], int ini, int fin);
int main() {
    int arr[8][5]={{1,2,3,2,1},
                   {2,3,2,2,1},
                   {1,2,2,5,3},
                   {2,5,3,3,1},
                   {2,2,3,2,1},
                   {1,2,3,2,1},
                   {3,5,2,1,1},
                   {2,3,2,1,1}};
    int n=8, m=5;
    for (int i = 0; i < n; i++) {
        int buscarMayor = buscarMaytor(arr[i], 0, m-1);
        cout<<"En la fila "<<i+1<<" ,el pasajero del asiento "<<buscarMayor+1<<
            " tiene el bocadito mas caro que sus 2 vecinos"<<endl;
    }
}

int buscarMaytor(int arr[M], int ini, int fin) {
    int medio = (ini + fin) / 2;
    if ((arr[medio+1] < arr[medio]) and (arr[medio-1] < arr[medio])) {
        return medio;
    } else {
        if (arr[medio+1] < arr[medio-1]) {
            return buscarMaytor(arr, ini, medio);
        } else {
            return buscarMaytor(arr, medio, fin);
        }
    }
}
